@{
    ViewData["Title"] = "Create Entry";
}

@model EmploymentMonitoringSystem.Models.InitialRecord

<div class="text-center">
    <h1 class="display-4">Create an Entry</h1>
</div>

<form asp-action="CheckFullName">
    <div class="form-group">
        <input hidden asp-for="Id" class="form-control" type="number" placeholder="0" />
    </div>

    <div class="form-group mt-4">
        <label class="control-label">Last name: </label>
        <input asp-for="Last_Name" class="form-control" type="text" />
    </div>

    <div class="form-group mt-4">
        <label class="control-label">First name: </label>
        <input asp-for="First_Name" class="form-control" type="text" />
    </div>

    <div class="form-group mt-4">
        <label class="control-label">Middle name: </label>
        <input asp-for="Middle_Name" class="form-control" type="text" />
    </div>

    <div class="form-group mt-4">
        <label for="extension_names" class="control-label">Extension name: </label>
        <select asp-for="Extension_Name" name="Extension Names" id="extension_names">
            <option value="none">None</option>
            <option value="sr">Sr.</option>
            <option value="jr">Jr.</option>
            <option value="iii">III</option>
        </select>
    </div>

    <div class="form-group mt-4">
        <button type="submit" class="btn btn-primary">Proceed</button>
    </div>
</form>