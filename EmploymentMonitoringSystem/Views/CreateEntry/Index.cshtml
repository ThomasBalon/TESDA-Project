@{
    ViewData["Title"] = "Create Entry";
}

@model EmploymentMonitoringSystem.Models.InitialRecord

<div class="text-center">
    <h1 class="display-4">Create an Entry</h1>
</div>

<form asp-action="SubmitFullName">
    <div class="form-group">
        <label for="lastName" class="control-label">Last name</label>
        <input asp-for="last_name" id="lastName" class="form-control" type="text" placeholder="Last name" />
    </div>
    <div class="form-group mt-4">
        <label for="firstName" class="control-label">First name</label>
        <input asp-for="first_name" id="firstName" class="form-control" type="text" placeholder="First name" />
    </div>
    <div class="form-group mt-4">
        <label for="middleName" class="control-label">Middle name</label>
        <input asp-for="middle_name" id="middleName" class="form-control" type="text" placeholder="Middle name" />
    </div>
    <div class="form-group mt-4">
        <label for="extensionName" class="control-label">Extension name</label>
        <select asp-for="extension_name" id="extensionName" class="form-control">
            <option value="">None</option>
            <option value="Sr.">Sr.</option>
            <option value="Jr.">Jr.</option>
            <option value="III">III</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-4">Submit</button>
</form>
